# 楽天商品監視ツール環境設定テンプレート
# 本番環境では .env ファイルにコピーして実際の値を設定してください

# SQLite運用設定
DATABASE_URL=sqlite:///product_states.db
DATABASE_TYPE=sqlite

# Discord設定 (必須)
DISCORD_BOT_TOKEN="YOUR_DISCORD_BOT_TOKEN_HERE"
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN"

# 監視設定
MONITORING_START_TIME=09:00
MONITORING_END_TIME=22:00

# ログレベル
LOG_LEVEL=INFO

# Prometheus（オプション）
# PROM_PUSHGATEWAY_URL=http://localhost:9091

# デバッグモード
DEBUG=false